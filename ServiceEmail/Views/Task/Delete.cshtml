@model ServiceEmail.UI.Models.TaskModel.TaskInfo

@{
    ViewData["Title"] = "ConfirmDelete";
}
<style>
    body {
        background: #000000;
        color: #fc0;
    }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TaskInfo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Task name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Description of the task:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Time when the task started:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastDateTime)
        </dd>
        <dt class="col-sm-2">
            Frequency of receiving data in hours:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PeriodicityTask)
        </dd>
        <dt class="col-sm-2">
            When the task starts:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MomentTaskStarts)
        </dd>
        <dt class="col-sm-2">
            Setting up a task:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppSettings)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Home">Back to List</a>
    </form>
</div>
